APP_ENV=local
APP_DEBUG=true
APP_NAME="EdgeCache License API"
APP_URL=http://127.0.0.1:8080

# Production/Vercel: set your Neon or Postgres connection string
# Example: postgresql://user:pass@host/dbname?sslmode=require
DATABASE_URL=

# Local fallback if DATABASE_URL is empty (kept for local dev)
DB_PATH=storage/license.db

# Required for phase 0 activation logic
EDGECACHE_MASTER_KEY=change-me-to-a-long-random-secret

# Optional request auth
# If set, clients must send header: X-EdgeCache-Signature (hex HMAC SHA256 of raw body)
SIGNING_SECRET=

# Internal admin endpoints auth
ADMIN_TOKEN=change-me-admin-token

# Simple IP+license rate limiting
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX_REQUESTS=60
